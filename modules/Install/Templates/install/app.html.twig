{% extends 'add.html.twig' %}
{% trans_default_domain 'install' %}

{% block main %}
	<div class="border rounded-3 shadow bg-secondary-subtle d-flex flex-row justify-content-center main p-3 mb-3 ms-2 me-2">
		<div class="flex-column">
			{% if error %}
                <div class="alert alert-danger d-flex flex-row justify-content-center">{{ error }}</div>
            {% endif %}
			<nav>
  				<div class="nav nav-tabs" id="nav-tab" role="tablist">
    				<button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">{% trans %}install.conf.bd.tabs{% endtrans %}</button>
    				<button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">{% trans %}install.conf.system.tabs{% endtrans %}</button>
				</div>
			</nav>
			<form action="{{ path('login_install') }}" method="post">
				<div class="tab-content text-primary-emphasis" id="nav-tabContent">
  					<div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
						<div class="d-flex justify-content-center">
							<h3>{% trans %}install.conf.bd.tabs{% endtrans %}</h3>
						</div>
    					<div class="d-flex justify-content-center">
							<div class="flex-column">
								<div class="flex-row d-flex justify-content-between pb-1">
									<label for="HostDB" class="space pe-2">{% trans %}install.conf.bd.host{% endtrans %}</label>
									<input type="text" name="HostDB" required size="15" value="{{ HostDB }}" class="space">
								</div>
								<div class="flex-row d-flex justify-content-between pb-1">
									<label for="PortDB" class="space pe-2">{% trans %}install.conf.bd.port{% endtrans %}</label>
									<input type="text" name="PortDB" required size="15" class="space" value="{{ PortDB }}">
								</div>
								<div class="flex-row d-flex justify-content-between pb-1">
									<label for="NameDB" class="space pe-2">{% trans %}install.conf.bd.name{% endtrans %}</label>
									<input type="text" name="NameDB" required size="15" class="space" value="{{ NameDB }}">
								</div>
								<div class="flex-row d-flex justify-content-between pb-1">
									<label for="UserDB" class="space pe-2">{% trans %}install.conf.bd.user{% endtrans %}</label>
									<input type="text" name="UserDB" required size="15" class="space" value="{{ UserDB }}">
								</div>
								<div class="flex-row d-flex justify-content-between pb-1">
									<label for="PassDB" class="space pe-2">{% trans %}install.conf.bd.password{% endtrans %}</label>
									<input type="text" name="PassDB" required size="15" class="space" value="{{ PassDB }}">
								</div>
								<div class="flex-row d-flex justify-content-center">
									<input type="reset" value="{% trans %}install.button.reset{% endtrans %}" class="button ui-button ui-widget ui-corner-all">
								</div>
							</div>
						</div>
					</div>
  					<div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
						<div class="d-flex justify-content-center">
							<h3>{% trans %}install.conf.system.tabs{% endtrans %}</h3>
						</div>
    					<div class="d-flex justify-content-center">
							<div class="flex-column">
								<div class="flex-row d-flex justify-content-between pb-1">
									<label for="uri" class="space pe-2">{% trans %}install.conf.system.uri{% endtrans %}</label>
									<input type="text" name="uri" required value="{{ uri }}" class="space" style="width: 300px">
								</div>
								<div class="flex-row d-flex justify-content-between pb-1">
									<label for="TimeZone" class="space pe-2">{% trans %}install.conf.system.timezone{% endtrans %}</label>
									<select class="space" size="1" required name="TimeZone" id="TimeZone" style="width: 300px">
										{% foreach TimeZone as Value %}
											{% if Value == TimeZoneDefault %}
												<option value="{{ Value }}" lang="en" selected="selected">{{ Value }}</option>
											{% else %}
												<option value="{{ Value }}" lang="en">{{ Value }}</option>
											{% endif %}
										{% endforeach %}			
									</select>
								</div>
								<div class="flex-row d-flex justify-content-between pb-1">
									<label for="DataFormat" class="space pe-2">{% trans %}install.conf.system.data{% endtrans %}</label>
									<select class="space" size="1" required name="DataFormat" id="DataFormat" style="width: 300px">
										{% foreach DataFormat as key => Value %}
											{% if key == DataFormatDefault %}
												<option value="{{ key }}" lang="en" selected="selected">{{ key }} - {{ Value.example }}</option>
											{% else %}
												<option value="{{ key }}" lang="en">{{ key }} - {{ Value.example }}</option>
											{% endif %}
										{% endforeach %}
									</select>
								</div>
								<div class="flex-row d-flex justify-content-between pb-1">
									<label for="TimeFormat" class="space pe-2">{% trans %}install.conf.system.time{% endtrans %}</label>
									<select class="space" size="1" required name="TimeFormat" id="TimeFormat" style="width: 300px">
										{% foreach TimeFormat as key => Value %}
											{% if key == TimeFormatDefault %}
												<option value="{{ key }}" lang="en">{{ key }} - {{ Value.example }}</option>
											{% else %}
												<option value="{{ key }}" lang="en">{{ key }} - {{ Value.example }}</option>
											{% endif %}
										{% endforeach %}
									</select>
								</div>
								<div class="flex-row d-flex justify-content-center pb-1">
									<input id="button" type="submit" value="{% trans %}install.button.submit{% endtrans %}">
								</div>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
   