{% extends '@Users/base_login.html.twig' %}
{% trans_default_domain 'login' %}

{% block title %}
    {{ parent() }}
    Log in!
{% endblock %}

{% block main %}
    <div class="d-flex flex-row justify-content-center">
        <h1 class="mb-3 font-weight-normal text-primary-emphasis">{% trans %}Please sign in{% endtrans %}</h1>
    </div>
    {% if error %}
        <div class="alert alert-danger d-flex flex-row justify-content-center" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('app_login') }}" method="post">
        <label for="username" class="form-label">{% trans from 'messages' %}Username{% endtrans %}</label>
        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
        <label for="password" class="form-label">{% trans from 'messages' %}Password{% endtrans %}</label>
        <div class="toggle-password-container">
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required {{ stimulus_controller('symfony/ux-toggle-password/toggle-password', {buttonClasses: ['toggle-password-button'], visibleLabel: 'Show password'|trans({}, 'messages'), hiddenLabel: 'Hide password'|trans({}, 'messages')}) }}>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="d-flex flex-row justify-content-between">
            <div class="checkbox mb-3 form-check">
                <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                <label for="_remember_me" class="form-check-label">{% trans %}Remember me{% endtrans %}</label>
            </div>
            <div>
                <a href="{{ path('app_forgot_password_request') }}" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">{% trans %}Lost your password?{% endtrans %}</a>
            </div>
        </div>
        <div class="d-grid gap-2 col-8 mx-auto">
            <button class="btn btn-lg btn-primary" type="submit">{% trans %}Sign in{% endtrans %}</button>
        </div>
    </form>
    {% if app.user %}
        <div class="mb-3 d-flex flex-row justify-content-center">
            {% trans %}You are logged in as{% endtrans %} {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a>
        </div>
    {% endif %}
{% endblock %}
