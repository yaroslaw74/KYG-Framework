{% extends '@Users/base_login.html.twig' %}
{% trans_default_domain 'login' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %}
    {{ parent() }}
    Register
{% endblock %}

{% block main %}
    <div class="d-flex flex-row justify-content-center">
        <h1 class="mb-3 font-weight-normal text-primary-emphasis">{% trans %}Registration{% endtrans %}</h1>
    </div>
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger d-flex flex-row justify-content-center" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {{ form_errors(registrationForm) }}
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <div class="d-grid gap-2 col-8 mx-auto">
            <button class="btn btn-lg btn-primary" type="submit">{% trans %}Register{% endtrans %}</button>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}
