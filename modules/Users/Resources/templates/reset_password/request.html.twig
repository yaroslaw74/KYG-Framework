{% extends '@Users/base.html.twig' %}
{% trans_default_domain 'Users' %}

{% block title %}
    {{ parent() }}
    Reset your password
{% endblock %}

{% block content %}
    <div class="card-body">
        <div class="pt-4 pb-2">
            <h5 class="card-title text-center pb-0 fs-4">{% trans %}Reset your password{% endtrans %}</h5>
        </div>
        {{ form_start(requestForm, {'attr': {'novalidate': 'novalidate', 'class': 'row g-3 needs-validation'}}) }}
            <div class="col-12 mb-3 d-flex flex-row justify-content-center">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
            </div>
            <div class="col-12">
                {{ form_label(requestForm.email) }}
                <div class="input-group has-validation">
                    <span class="input-group-text" id="inputGroupPrepend">@</span>
                    {{ form_widget(requestForm.email) }}
                    <div class="invalid-feedback">{% trans %}Please enter your email{% endtrans %}</div>
                </div>
            </div>
            <div  class="col-12">
                <small>{% trans %}Enter your email address, and we will send you a link to reset your password.{% endtrans %}</small>
            </div>
            <div class="col-12">
                <button class="btn btn-primary  w-100">{% trans %}Send password reset email{% endtrans %}</button>
            </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
