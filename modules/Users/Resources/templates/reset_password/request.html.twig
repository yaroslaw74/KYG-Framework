{% extends '@Users/base_login.html.twig' %}
{% trans_default_domain 'login' %}
{% form_theme requestForm 'bootstrap_5_layout.html.twig' %}

{% block title %}
    {{ parent() }}
    Reset your password
{% endblock %}

{% block main %}
    <div class="d-flex flex-row justify-content-center">
        <h1 class="mb-3 font-weight-normal text-primary-emphasis">{% trans %}Reset your password{% endtrans %}</h1>
    </div>
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger d-flex flex-row justify-content-center" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>{% trans %}Enter your email address, and we will send you a link to reset your password.{% endtrans %}</small>
        </div>
        <div class="d-grid gap-2 col-8 mx-auto">
            <button class="btn btn-lg btn-primary" type="submit">{% trans %}Send password reset email{% endtrans %}</button>
        </div>
    {{ form_end(requestForm) }}
{% endblock %}
