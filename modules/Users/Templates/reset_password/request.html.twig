{% extends 'add.html.twig' %}
{% form_theme requestForm 'bootstrap_5_horizontal_layout.html.twig' %}
{% trans_default_domain 'reset_password' %}

{% block title %}
    {{ parent() }}
    Reset your password
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block main %}
    <div class="d-flex flex-row justify-content-center">
		<div class="border rounded-3 shadow bg-secondary-subtle d-flex flex-row justify-content-center main p-3 mb-3">
            {{ form_start(requestForm) }}
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                <div class="d-flex flex-row justify-content-center">
                    <h1 class="mb-3 font-weight-normal text-primary-emphasis">{% trans %}form.title{% endtrans %}</h1>
                </div>
                {{ form_row(requestForm.email) }}
                <div class="d-flex flex-row justify-content-center">
                    <small>{% trans %}form.message{% endtrans %}</small>
                </div>
                <br>
                <button class="btn btn-primary">{% trans %}form.button{% endtrans %}</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
