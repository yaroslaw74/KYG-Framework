{% extends 'add.html.twig' %}
{% trans_default_domain 'reset_password' %}
{% form_theme resetForm 'bootstrap_5_layout.html.twig' %}

{% block title %}
    {{ parent() }}
    Reset your password
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block main %}
    <div class="d-flex flex-row justify-content-center">
		<div class="border rounded-3 shadow bg-secondary-subtle d-flex flex-row justify-content-center main p-3 mb-3">
            {{ form_start(resetForm) }}
                <div class="d-flex flex-row justify-content-center">
                    <h1 class="mb-3 font-weight-normal text-primary-emphasis">{% trans %}form.title{% endtrans %}</h1>
                </div>
                {{ form_row(resetForm.plainPassword) }}
                <button class="btn btn-primary">Reset password</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
