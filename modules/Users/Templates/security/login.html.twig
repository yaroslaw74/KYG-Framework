{% extends '@Users/core.html.twig' %}
{% trans_default_domain 'login' %}

{% block title %}
    {{ parent() }}
    Log in!
{% endblock %}

{% block content %}
    <form action="{{ path('app_login') }}" method="post">
        {% if error %}
            <div class="alert alert-danger d-flex flex-row justify-content-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {% if app.user %}
            <div class="mb-3 d-flex flex-row justify-content-center">
                {% trans %}login.logged{% endtrans %} {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">{% trans %}login.logout{% endtrans %}</a>
            </div>
        {% endif %}
        <div class="d-flex flex-row justify-content-center">
            <h3 class="mb-3 font-weight-normal text-primary-emphasis">{% trans %}login.title{% endtrans %}</h3>
        </div>
        
        <label for="username" class="text-primary-emphasis">{% trans %}login.username{% endtrans %}</label>
        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" size="50" required autofocus>
        <label for="password" class="text-primary-emphasis">{% trans %}login.password{% endtrans %}</label>
        <div class="toggle-password-container">
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" size="50" required {{ stimulus_controller('symfony/ux-toggle-password/toggle-password', {visibleLabel: 'login.show'|trans, hiddenLabel: 'login.hide'|trans, buttonClasses: ['toggle-password-button']}) }}>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="d-flex flex-row justify-content-between text-primary-emphasis">
            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">{% trans %}login.remember{% endtrans %}</label>
            </div>
            <a href="#">{% trans %}login.forgot{% endtrans %}</a>
        </div>
        <button class="btn btn-lg btn-primary" type="submit">{% trans %}login.sign{% endtrans %}</button>
    </form>
{% endblock %}