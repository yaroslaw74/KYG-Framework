<!DOCTYPE html>
<html lang="{{ app.locale }}" data-bs-theme="auto" dir="{{ locale_dir(app.locale) }}>
    <head>
        <meta charset="UTF-8">
        <meta name="robots" content="noindex, nofollow">
        <meta name="autor" content="Kataev Yaroslav Georgievich">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="msapplication-TileColor" content="#526cf7">
        <meta name="msapplication-TileImage" content="{{ asset ('images/ico/kyg-270X270.png')}}">
        <title>{% block title %}{{ app_name }}{% endblock %}</title>
        <link rel="icon" href="{{ asset('favicon.ico') }}">
        <link rel="icon" sizes="96x96" href="{{ asset('images/ico/kyg-96X96.png') }}">
        <link rel="apple-touch-icon" sizes="57x57" href="{{ asset('images/ico/kyg-57X57.png') }}">
        <link rel="apple-touch-icon" sizes="60x60" href="{{ asset('images/ico/kyg-60X60.png') }}">
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('images/ico/kyg-72X72.png') }}">
        <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('images/ico/kyg-76X76.png') }}">
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('images/ico/kyg-114X114.png') }}">
        <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('images/ico/kyg-120X120.png') }}">
        <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('images/ico/kyg-144X144.png') }}">
        <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('images/ico/kyg-152X152.png') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/ico/kyg-180X180.png') }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bootstrap-icons/font/bootstrap-icons.min.css') }}">
            <link rel="stylesheet" href="{{ asset('font-awesome/css/svg-with-js.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/button.css') }}">
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}
                {{ importmap(['app', locale_dir(app.locale)]) }}
            {% endblock %}
            {{ encore_entry_script_tags('app') }}
            <script src="{{ asset('font-awesome/js/all.min.js') }}"></script>
            <script src="{{ asset('js/color-modes.js') }}"></script>
        {% endblock %}
    </head>
    <body {{ stimulus_controller('myswup')|stimulus_controller('symfony/ux-swup/swup', {
            containers: ['#swup', '#nav'],
            animateHistoryBrowsing: true,
            cache: true,
            theme: 'slide',
            debug: true
        }) }}>
        {% block body %}{% endblock %}
    </body>
</html>
