<!DOCTYPE html>
<html  lang="{{ app.locale }}" data-bs-theme="auto" dir="{{ localedir(app.locale) }}">
    <head>
        <meta charset="UTF-8">
        <meta name="robots" content="noindex, nofollow">
	    <meta name="autor" content="Kataev Yaroslav Georgievich">
	    <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{{ app_name }}{% endblock %}</title>
        <link rel="icon" href="{{ asset('favicon.ico') }}">
        {% if localedir(app.locale) == 'ltr' %}
			<link rel="stylesheet" href="{{ asset('bootstrap/dist/css/bootstrap.min.css') }}" />
		{% else %}
			<link rel="stylesheet" href="{{ asset('bootstrap/dist/css/bootstrap.rtl.min.css') }}" />
		{% endif %}
        <link rel="stylesheet" href="{{ asset('bootstrap-icons/font/bootstrap-icons.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('font-awesome/css/svg-with-js.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/button.css') }}" />
        {% block stylesheets %}{% endblock %}
        <script src="{{ asset('bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('font-awesome/js/all.min.js') }}"></script>
        <script src="{{ asset('js/color-modes.js') }}"></script>
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {{ include('button.svg.twig') }}
        {% block body_top %}{% endblock %}
	    <header class="container-fluid d-flex flex-column p-0">
		    {% block header %}{% endblock %}
	    </header>
	    <main class="container-fluid d-flex flex-column p-0">
		    {% block main %}{% endblock %}
	    </main>
	    <footer class="container-fluid d-flex flex-row justify-content-between align-items-center bg-body-tertiary p-0 mt-1 mb-1">
		    <div class="d-flex flex-row align-items-center ms-3">
			    <div class="me-1">
				    {{ include('symfony.svg.twig') }}
			    </div>
			    <div class="me-1">
				    {{ include('kyg.svg.twig') }}
			    </div>
                <div class="text-nowrap mt-1"><h6><strong>{{ shivas_app_version }}</strong></h6></div>
		    </div>
            
		    <div class="align-self-center text-danger mt-1">
                <h6>
                    {% for message in app.flashes('footer') %}
                        {{ message }}
                    {% endfor %}
                </h6>
            </div>
		    <div class="text-nowrap me-3 mt-1" lang="en"><h6><strong>&copy; 2025 Kataev Yaroslav</strong></h6></div>
	    </footer>
        {% block body_bottom %}{% endblock %}
    </body>
</html>
