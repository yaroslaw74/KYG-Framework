{% extends "core.html.twig" %}

{% block style %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('libraries/css/home.css') }}">
	{% block style_home %}{% endblock %}
{% endblock %}

{% block script_head %}
	{{ parent() }}
	{% block javascript_head %}{% endblock %}
{% endblock %}

{% block header %}
	<div class="items"><img alt="" class="logo" src="{{ asset('libraries/icon/kyg.png') }}"></div>
	<div class="name flex_0_0_auto">KYG Framework for business</div>
	<div class="flex_0_1_100"></div>
{% endblock %}

{% block main %}
	<div class="menu">
		{% block menu %}{% endblock %}
	</div>
	<div class="work flex_0_1_100 flex_row">
		<div class="content flex_0_1_100">
			{% block content %}{% endblock %}
		</div>
	</div>
{% endblock %}

{% block error %}
	{% block home_error %}{% endblock %}
{% endblock %}

{% block script_body %}
	{% block javascript_body %}{% endblock %}
{% endblock %}